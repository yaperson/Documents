{% extends 'base.html.twig' %}

{% block title %}Hello TableController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    .tab { display: flex ; flex-direction:column; border: solid 2px; background: {{ color }};}
    .tab_content {
        display: flex ; 
        justify-content: center; 
        border: solid 2px; 
        padding: 8px; 
        font-size: 60px;
        margin: 5px;
        }
</style>

<div class="example-wrapper">
    <h1>{{ controller_name }}! âœ…</h1>
    <span>{{ color }}</span>

    <div class="tab">
        {% for calculation in calculations %}
            <p class="tab_content">{{ calculation.indice }} x {{nbr}} = {{ calculation.result}}</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
